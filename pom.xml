</dependency>
  <dependency>
    <groupId>com.sun.jersey</groupId>
    <artifactId>jersey-server</artifactId>
    <version>1.17.1</version>
    <exclusions>
	<exclusion>
	<groupId>asm</groupId>
	<artifactId>asm</artifactId>
	</exclusion>
	<exclusion>
	<groupId>asm</groupId>
	<artifactId>asm-all</artifactId>
